@model Product

<body>
    <header>
        @await Html.PartialAsync("ProductPartials/_Nav")
    </header>
    <main>
        <div class="middle">
            <h1 class="header">Update product</h1>
            <form class="form" action="/codepink/updateProduct/@Model.ProductId" method="Post">
                <div class="section">
                    <label class="label" asp-for="Name">Product Name :</label>
                    <span asp-validation-for="Name" class="text-danger font-weight-bold"></span>
                    <input class="form-control" asp-for="Name">
                </div>
                @* <div class="mb-3">
                    <label asp-for="Category">Category :</label>
                    <span asp-validation-for="Category" class="text-danger font-weight-bold"></span>
                    <input class="form-control" asp-for="Category">
                    </div> *@
                <label class="label" for="category">Category :</label>
                <span asp-validation-for="Category" class="text-danger font-weight-bold"></span>
                <select name="Category" id="Category">
                    <option value="Laptops">Laptops</option>
                    <option value="MonitorsAndDesktops">Monitors & Desktops</option>
                    <option value="Tablets">IPads & Tablets</option>
                    <option value="Earphones">Earphones & Earbuds</option>
                    <option value="Accessories">Tech & Desk Accessories</option>
                    <option value="Furniture">Furniture</option>
                </select>
                <div class="section">
                    <label class="label" asp-for="Price">Price :</label>
                    <span asp-validation-for="Price" class="text-danger font-weight-bold"></span>
                    <input class="form-control" asp-for="Price">
                </div>
                <div class="section">
                    <label class="label" asp-for="Img1">First Image URL :</label>
                    <span asp-validation-for="Img1" class="text-danger font-weight-bold"></span>
                    <input class="form-control" asp-for="Img1">
                </div>
                <div class="section">
                    <label class="label" asp-for="Img2">Second Image URL :</label>
                    <span asp-validation-for="Img2" class="text-danger font-weight-bold"></span>
                    <input class="form-control" asp-for="Img2">
                </div>
                <div class="section">
                    <label class="label" asp-for="Img3">Third Image URL :</label>
                    <span asp-validation-for="Img3" class="text-danger font-weight-bold"></span>
                    <input class="form-control" asp-for="Img3">
                </div>
                <div class="section">
                    <label class="label" asp-for="Img4">Fourth Image URL :</label>
                    <span asp-validation-for="Img4" class="text-danger font-weight-bold"></span>
                    <input class="form-control" asp-for="Img4">
                </div>
                @* <div class="section">
                    <label class="label" asp-for="Img5">Fifth Image URL :</label>
                    <span asp-validation-for="Img5" class="text-danger font-weight-bold"></span>
                    <input class="form-control" asp-for="Img5">
                    </div> *@
                <div class="section">
                    <label class="label" asp-for="Description">Description of product :</label>
                    <span asp-validation-for="Description" class="text-danger font-weight-bold"></span>
                    <input class="form-control" asp-for="Description">
                </div>
                <button class="button-56">Update Product</button>
            </form>
        </div>
    </main>
