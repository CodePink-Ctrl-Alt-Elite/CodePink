<img class="productbanner" src="~/images/productimgs/b1.png" alt="">


@model List<Product>
<body>
    <main class="productbody">
    @{
        Console.WriteLine("@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@");
        if(Context.Session.GetInt32("uid") == 1) 
        {
            foreach(Product p in Model) 
            {
                <div class="productcard">
                    <img class="prodimg1" src="@p.Img1" alt="Post Image">
                    <div class="pricenamerow">
                        <h4><a href="/codepink/@p.ProductId">@p.Name</a></h4>
                        <h5>$@p.Price</h5>
                    </div>
                        <form asp-controller="Product" asp-action="AddToCart" asp-route-id="@p.ProductId">
                            <button class="atcbutton" onclick="buttonClick()">Add To Cart</button>
                        </form>
                    @* <div id="editanddeletedashboard">
                    <a href="/codepink/edit/@p.ProductId"><button class="button-56">Edit Product</button></a>
                    <a href="/codepink/delete/@p.ProductId"><button class="button-56">Delete Product</button></a>
                    </div> *@
                </div>             
            }
        }
        else {
            foreach(Product p in Model) 
        {
                <div class="productcard">
                    <img class="prodimg1" src="@p.Img1" alt="Post Image">
                    <div class="pricenamerow">
                        <h4><a href="/codepink/@p.ProductId">@p.Name</a></h4>
                        <h5>$@p.Price</h5>
                    </div>
                    <form asp-controller="Product" asp-action="AddToCart" asp-route-id="@p.ProductId">
                        <button class="atcbutton" onclick="buttonClick()">Add To Cart</button>
                    </form>
            </div>
        }
    }
    } 
    </main>   
</body>
<footer>
        @await Html.PartialAsync("ProductPartials/_Footer")
