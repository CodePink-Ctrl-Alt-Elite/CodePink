@model LoginUser
<link rel="stylesheet" href="~/css/laelynn/login.css">
<div class="login-box">
    <h2>LOG IN</h2>
    <form action="/login" method="Post">
        <div class="user-box">
            <input type="text" asp-for="LoginEmail">
            <label asp-for="LoginEmail">Email</label>
            <span class="val" asp-validation-for="LoginEmail"></span>
        </div>
        <div class="user-box">
            <input type="password" asp-for="LoginPassword">
            <label asp-for="LoginPassword">Password</label>
            <span class="val" asp-validation-for="LoginPassword"></span>
        </div>
        <button>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            Login
        </button>
    </form>
</div>