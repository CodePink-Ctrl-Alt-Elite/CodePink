@model LoginUser
<link rel="stylesheet" href="~/css/laelynn/login.css">

<body>



    <div class="divider">
        <div class="right-side">
            <a href="/"><img id="video_overlays" src="~/images/laelynnimages/laelynnlogo.png" alt="you're in words"></a>
            <video id="myvideo" src="~/videos/login.mov" autoplay muted loop></video>
        </div>
        <div class="left-side">
            <div class="formdivy">
                <form action="/register" method="post" class="card-form">
                    <h2 class="text-center font-up font-bold py-4 white-text">Sign in</h2>
                    <div class="md-form">
                        <i class="fa fa-envelope prefix white-text"></i>
                        <input type="text" id="orangeForm-email2" asp-for="LoginEmail" class="form-control">
                        <label asp-for="LoginEmail">Your email</label>
                        <span asp-validation-for="LoginEmail"></span>
                    </div>
                    <div class="md-form">
                        <i class="fa fa-lock prefix white-text"></i>
                        <input type="password" id="orangeForm-pass2" asp-for="LoginPassword" class="form-control">
                        <label asp-for="LoginPassword">Your password</label>
                        <span asp-validation-for="LoginPassword"></span>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-outline-white waves-effect waves-light">LOGIN</button>
                    </div>
                    <h3 class="signupinstead">Not a student yet? <a href="/codepink/laelynn/#SignUp">Sign Up</a></h3>
                </form>
            </div>
        </div>
    </div>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>